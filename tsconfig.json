{
  "compilerOptions": {
    "module": "ESNext", // Or "ES6" if using older versions of TypeScript
    "target": "ESNext", // Ensure the target is ESNext or a compatible version
    "moduleResolution": "node", // This is often helpful for Node modules resolution
    "esModuleInterop": true, // Enable this to allow CommonJS to interoperate with ES modules
    "skipLibCheck": true, // Skip type checking of declaration files for faster builds
    "allowSyntheticDefaultImports": true
  }
}
